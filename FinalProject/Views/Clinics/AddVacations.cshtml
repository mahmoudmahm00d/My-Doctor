@model FinalProject.DTOs.VacationDTO
@{
    ViewBag.Title = "AddVacations";
    Layout = "~/Views/Shared/_Empty.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="main-form pt-4 text-center">

        <label>من تاريخ</label>
        <div class="form-group mx-auto round-this col-lg-5 col-md-6 px-0">
            @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" } })
            @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
        </div>


        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label>الى تاريخ</label>
            <div>
                @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" } })
                @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <div>
                @Html.EditorFor(model => model.Statue, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center", plcaeholder = "وصف" } })
                @Html.ValidationMessageFor(model => model.Statue, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <input type="submit" value="إضافة عطلة" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow mx-auto" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
