@model FinalProject.DTOs.AppointmentDTO
@{
    ViewBag.Title = "EditReports";
    Layout = "~/Views/Shared/_Clinic.cshtml";
}


@using (Html.BeginForm("Symptoms", "Clinics", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row main-header">
        @if (string.IsNullOrEmpty(Model.Symptoms))
        {
            <h1 class="mx-auto text-color-primary">
                إضافة تشخيص
            </h1>
        }
        else
        {
            <h1 class="mx-auto text-color-primary">
                تعديل تشخيص
            </h1>
        }
    </div>

    <div class="main-form pt-4 text-center">

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <div>
                @Html.EditorFor(model => model.Symptoms, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" ,placeholder = "الأعراض والتشخيصات"} })
                @Html.ValidationMessageFor(model => model.Symptoms, "", new { @class = "text-danger mx-auto" })
            </div>
        </div>

        @Html.HiddenFor(model => model.AppointmentId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger mx-auto" })

        <div class="form-group">
            <input type="submit" value="حفظ البيانات" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow mx-auto" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
