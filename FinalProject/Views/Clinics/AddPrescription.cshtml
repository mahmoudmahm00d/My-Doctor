@model FinalProject.DTOs.FormPrescritpionDTO
@{
    ViewBag.Title = "AddPrescription";
    Layout = "~/Views/Shared/_Empty.cshtml";
}




@using (Html.BeginForm("AddDay", "Clinics", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row main-header">
        <h1 class="mx-auto text-color-primary">
            إضافة وصفة
        </h1>
    </div>

    //todo 
    //Add Autocomplete

    <div class="main-form pt-4 text-center">

        <div class="form-group mx-auto round-this col-lg-5 col-md-6 px-0">
            @Html.EditorFor(model => model.MedicineId, new { @class = "form-control round-this shadow" })
            @Html.ValidationMessageFor(model => model.MedicineId, "", new { @class = "text-danger" })
        </div>


        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label>من الساعة</label>
            <div>
                @Html.EditorFor(model => model.Dosage, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" } })
                @Html.ValidationMessageFor(model => model.Dosage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label>الى الساعة</label>
            <div>
                @Html.EnumDropDownListFor(model => model.Every, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" } })
                @Html.ValidationMessageFor(model => model.Every, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label>من الساعة</label>
            <div>
                @Html.EditorFor(model => model.For, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" } })
                @Html.ValidationMessageFor(model => model.For, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label>الى الساعة</label>
            <div>
                @Html.EnumDropDownListFor(model => model.TimeSpan, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center" } })
                @Html.ValidationMessageFor(model => model.TimeSpan, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <input type="submit" value="إضافة يوم" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow mx-auto" />
        </div>
        @Html.HiddenFor(model=> model.AppointmentId)
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
