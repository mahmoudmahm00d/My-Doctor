@model FinalProject.DTOs.CertificateDTO

@{
    ViewBag.Title = "AddCertificate";
    Layout = "~/Views/Shared/_Empty.cshtml";
}



@using (Html.BeginForm("AddCertificate", "Clinics", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row main-header">
        <h1 class="mx-auto text-color-primary">
            إضافة شهادة
        </h1>
    </div>

    <div class="main-form pt-4 text-center">

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <div>
                @Html.EditorFor(model => model.CertifcateDescription, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center"  , placholder = "معلومات الشهادة"} })
                @Html.ValidationMessageFor(model => model.CertifcateDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <input type="submit" value="إضافة شهادة" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow mx-auto" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
