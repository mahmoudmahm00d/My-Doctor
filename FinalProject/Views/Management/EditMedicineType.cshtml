@model FinalProject.DTOs.MedicineTypeDTO
@{
    ViewBag.Title = "تعديل نوع دواء";
    Layout = "~/Views/Shared/_Managment.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row main-header">
        <h3 class="mx-auto text-color-primary">
            تعديل نوع دواء
        </h3>
    </div>

    <div class="main-form pt-4 text-center">
        @Html.HiddenFor(model => model.MedicineTypeId)
        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <div>
                @Html.EditorFor(model => model.MedicineTypeName, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center", placeholder = "اسم النوع" } })
                @Html.ValidationMessageFor(model => model.MedicineTypeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label> فعال</label>
            <div>
                @Html.EditorFor(model => model.IsActiveMedicineType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsActiveMedicineType, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <input type="submit" value="حفظ البيانات" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow mx-auto" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}