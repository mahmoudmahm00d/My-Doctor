@model FinalProject.DTOs.SignInUser

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Empty.cshtml";
    ViewBag.Styles = Styles.Render("~/Content/loginStyle");
}

<div class="main-login mx-auto" dir="ltr">
    <div class="row mb-5">
        <h1 class="mx-auto text-color-primary">
            مرحباً
        </h1>
    </div>
    @using (Html.BeginForm("SignIn", "Management", FormMethod.Post, new { @class = "main-login-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row my-3">
            <div class="col">
                <div class="input-group mx-auto col-lg-5 col-md-6 shadow px-0">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "البريد الإلكتروني" } })
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <svg id="user" xmlns="http://www.w3.org/2000/svg" width="16" height="24"
                                 viewBox="0 0 16 24">
                                <path id="Path_1384" data-name="Path 1384"
                                      d="M18.667,8.333A5.333,5.333,0,1,1,13.333,3,5.333,5.333,0,0,1,18.667,8.333ZM16,8.333a2.667,2.667,0,1,1-2.667-2.667A2.667,2.667,0,0,1,16,8.333Z"
                                      transform="translate(-5.333 -3)" fill="#afafaf" fill-rule="evenodd" />
                                <path id="Path_1385" data-name="Path 1385"
                                      d="M19.333,16A1.333,1.333,0,0,0,18,14.667H10A1.333,1.333,0,0,0,8.667,16v8H6V16a4,4,0,0,1,4-4h8a4,4,0,0,1,4,4v8H19.333Z"
                                      transform="translate(-6 0)" fill="#afafaf" />
                            </svg>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger mx-auto" })
            </div>
        </div>
        <div class="row my-3">
            <div class="col">
                <div class="input-group mx-auto col-lg-5 col-md-6 shadow px-0">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "كلمة المرور", @type = "password" } })
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <svg id="lock" xmlns="http://www.w3.org/2000/svg" width="20" height="23.333"
                                 viewBox="0 0 20 23.333">
                                <path id="lock-2" data-name="lock"
                                      d="M19.667,11.5A3.333,3.333,0,0,1,23,14.833V21.5a3.333,3.333,0,0,1-3.333,3.333H6.333A3.333,3.333,0,0,1,3,21.5V14.833A3.333,3.333,0,0,1,6.333,11.5V8.167a6.667,6.667,0,1,1,13.333,0ZM13,3.722a4.444,4.444,0,0,1,4.444,4.444V11.5H8.556V8.167A4.444,4.444,0,0,1,13,3.722Zm6.667,10H6.333a1.111,1.111,0,0,0-1.111,1.111V21.5a1.111,1.111,0,0,0,1.111,1.111H19.667A1.111,1.111,0,0,0,20.778,21.5V14.833A1.111,1.111,0,0,0,19.667,13.722Z"
                                      transform="translate(-3 -1.5)" fill="#afafaf" fill-rule="evenodd" />
                            </svg>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger  mx-auto" })
            </div>
        </div>
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="row my-3">
            <button type="submit" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow">تسجيل الدخول</button>
        </div>
        <div class="row my-3">
            <a href="/Management/ForgetPassword" class="mx-auto text-center text-secondary">نسيت كلمةالمرور؟</a>
        </div>

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
