@model FinalProject.DTOs.CityDTO
@{
    ViewBag.Title = "AddCity";
    Layout = "~/Views/Shared/_Managment.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row main-header">
        <h3 class="mx-auto text-color-primary">
            إضافة مدينة
        </h3>
    </div>

    <div class="main-form pt-4 text-center">

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <div>
                @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control round-this shadow placeholder-center", placholder = "معلومات الشهادة" } })
                @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mx-auto round-this col-lg-5 col-md-6  px-0">
            <label> فعالة</label>
            <div>
                @Html.EditorFor(model => model.IsActiveCity, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.IsActiveCity, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <input type="submit" value="إضافة مدينة" class="btn background-color-primary mx-auto col-lg-5 col-md-6 shadow mx-auto" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}